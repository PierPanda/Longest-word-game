<div class="container d-flex row justify-content-center align-items-center mx-auto">
  <div class="text-center m-4 pt-5">
    <h1 class="m-3">New Game</h1>
    <div class="d-flex justify-content-center align-items-center">
      <%@letters.each do |letter|%>
        <div class="shadow-sm border border-warning p-3 mx-1 my-4 p-4 rounded-3 bg-light fs-3 text">
          <%=letter%>
        </div>
      <%end%>
    </div>

    <p class="m-4 fs-4 text">What is the longest word you can do ?</p>
  </div>

  <div class="col-3">
    <form action="/score" method="post" data-turbo="false">
      <div class="p-1">
        <input type="text" name="word" class="form-control my-auto border border-warning">
      </div>
      <div class="p-1">
        <input type="submit" value="Play" class="form-control shadow-sm btn btn-warning text-white fs-4 my-auto">
      </div>
      <%= hidden_field_tag :letters, @letters %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>
    </div>
  </div>
</div>
